<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.CategoryAdminActivity">


    <TextView
        android:id="@+id/text_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:fontFamily="@font/mvboli"
        app:fontFamily="@font/mvboli"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/l1_category_layout"
        android:layout_width="402dp"
        android:layout_height="80dp"
        android:layout_below="@+id/text_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/girl_dresses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/girldress" />

        <ImageView
            android:id="@+id/boy_dresses"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/boydress" />

        <ImageView
            android:id="@+id/girl_shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/girshoe" />

        <ImageView
            android:id="@+id/boy_shoes"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/boyshoe" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/l2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/baby_blankets"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/blanket"
            />

        <ImageView
            android:id="@+id/baby_diapers"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/diaper"
            />

        <ImageView
            android:id="@+id/bath_acessories"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bath"
            />

        <ImageView
            android:id="@+id/baby_books"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/books"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/l3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/strollers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/stroller"
            />

        <ImageView
            android:id="@+id/car_seats"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/carseat"
            />

        <ImageView
            android:id="@+id/safety"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/safety"
            />

        <ImageView
            android:id="@+id/toys"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/toys"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/check_orders_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/mvboli"
        android:text="Maintain Products"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:fontFamily="@font/mvboli" />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/mvboli"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:fontFamily="@font/mvboli" />


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:fontFamily="@font/mvboli"
        app:fontFamily="@font/mvboli"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />

</RelativeLayout>